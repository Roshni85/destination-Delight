<% layout("/layout/layout.ejs") %>
<title>Filtered Packages</title>

<body class="bg-light">
    <div class="container mt-5">
        <h2 class="text-center fw-bold mb-4">Filtered Packages</h2>

        <% if (packages.length > 0) { %>
            <div class="row">
                <% packages.forEach(package => { %>
                    <div class="col-md-4 mb-4 d-flex justify-content-center">
                        <a href="/packages/<%= package._id %>" style="text-decoration: none;">
                            <div class="card position-relative" style="width: 18rem; height: 22rem; border-radius: 20px; overflow: hidden; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.50); display: flex; flex-direction: column; justify-content: flex-end;">
        
                                <!-- Dark Overlay -->
                                <div class="overlay position-absolute w-100 h-100" style="background: rgba(0, 0, 0, 0.); top: 0; left: 0;"></div>
                                
                                <!-- Package Image -->
                                <% if (package.image && package.image.length > 0) { %>
                                    <img src="<%= package.image[0].url %>" class="card-img-top" style="height: 100%; object-fit: cover;" alt="Package Image">
                                <% } else { %>
                                    <img src="/assets/Rectangle.png" class="card-img-top" style="height: 100%; object-fit: cover;" alt="Default Image">
                                <% } %>
                                <div class="position-absolute" style="top: 10px; left: 15px; background: rgba(0, 0, 0, 0.6); padding: 5px 10px; border-radius: 5px;">
                                    <h5 style="font-weight: bold; color: white; margin-bottom: 0; font-size: 18px;">
                                        <%= package.name %>
                                    </h5>
                                </div>
                                
                                <!-- Card Content (Floating on Image) -->
                                <div class="card-body position-absolute w-100 text-white" style="bottom: 10px; left: 0; padding: 15px;">
                                    
                                    <p class="text-muted text-light" style="font-size: 14px; margin-bottom: 0;">
                                        <%= package.description %>
                                    </p>
                                    
                                    <!-- Arrow Icon -->
                                    <div class="arrow-icon position-absolute" style="bottom: 10px; right: 15px; width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; border: 2px solid black; border-radius: 50%; font-size: 18px; color: black; font-size: 30px;">
                                        ğŸ¡¥
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center text-muted">No packages available.</p>
        <% } %>
    </div>
</body>
</html>
