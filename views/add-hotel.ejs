<% layout("/layout/layout.ejs") %>

<title>Add Hotel</title>



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4 rounded">
                <h2 class="text-center fw-bold">Add a New Hotel</h2>
                <p class="text-muted text-center">Fill in the details to add a hotel.</p>

                <form action="/add-hotel" method="POST">
                    <!-- Hotel Name -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Hotel Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter hotel name" required>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Location</label>
                        <input type="text" id="location" name="location" class="form-control" placeholder="Enter location" required>
                    </div>

                    <!-- Price Per Night -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Price Per Night (â‚¹)</label>
                        <input type="number" id="pricePerNight" name="pricePerNight" class="form-control" placeholder="Enter price" required>
                    </div>

                    <!-- Available Rooms -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Available Rooms</label>
                        <input type="number" id="availableRooms" name="availableRooms" class="form-control" placeholder="Enter number of rooms" required>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4 py-2 fw-bold">Add Hotel</button>
                    </div>
                </form>

                <!-- Back Link -->
                <div class="text-center mt-3">
                    <a href="/" class="text-decoration-none text-primary fw-bold">&larr; Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
